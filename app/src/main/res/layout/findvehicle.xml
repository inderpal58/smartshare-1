<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controller.findVehicleController">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Source Address"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sourceAddressLineOneText"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="Address Line One" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sourceCityNameText"
            android:layout_row="3"
            android:hint="City"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:hint="Postal Code"
            android:id="@+id/sourcePostalCodeText"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Current Location"
            android:id="@+id/getCurrentLocationButton"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Destination Address"
            android:id="@+id/textView2"
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destinationAddressLineOneText"
            android:layout_row="8"
            android:layout_column="0"
            android:hint="Address Line One" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destinationCityNameText"
            android:layout_row="9"
            android:hint="City"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="9"
            android:hint="Postal Code"
            android:id="@+id/destinationPostalCodeText"
            android:layout_row="10"
            android:layout_column="0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_row="12"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="From Date"
                android:layout_marginRight="25dp"
                android:id="@+id/fromDate" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@drawable/tv_back"
                android:id="@+id/getFromDate"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="setDateTime"
                android:background="@drawable/cal"
                android:id="@+id/getDateButton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_row="13"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Start"
                android:layout_marginRight="25dp"
                android:id="@+id/startTime" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@drawable/tv_back"
                android:id="@+id/getStartTime"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="setDateTime"
                android:background="@drawable/time_icon"
                android:id="@+id/setStartTimeButton" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_row="14"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="To Date"
                android:layout_marginRight="25dp"
                android:id="@+id/toDate" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@drawable/tv_back"
                android:id="@+id/getToDate"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="setDateTime"
                android:background="@drawable/cal"
                android:id="@+id/toDateButton" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_row="15"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="End "
                android:layout_marginRight="25dp"
                android:id="@+id/endTime" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@drawable/tv_back"
                android:id="@+id/getEndTime"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="setDateTime"
                android:background="@drawable/time_icon"
                android:id="@+id/setEndTimeButton" />

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Vehicle"
            android:id="@+id/findVehicleProceedButton"
            android:layout_row="18"
            android:layout_column="0" />



    </GridLayout>
</LinearLayout>