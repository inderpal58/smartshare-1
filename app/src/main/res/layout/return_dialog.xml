<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#FFDE45"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_left" />

        <TextView
            android:id="@+id/tv_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFDE45"
            android:textAlignment="center"

            android:padding="4dp"
            android:text="Time and Date"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:src="@drawable/feedback_icon" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_date" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:background="@drawable/tv_back"
            android:id="@+id/get_ReturnDateTime"  />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="setDateTime"
            android:background="@drawable/cal"
            android:id="@+id/button_setReturnDateTime" />
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:background="#FFB200"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:id="@+id/button_return" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cancel Booking"
        android:background="#E3052E"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:id="@+id/button_cancel" />
</LinearLayout>

    
</LinearLayout>